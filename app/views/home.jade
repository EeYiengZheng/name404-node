extends layout

block content
	h1 Online Shopping
	br 
	span 
		form#formAddOrder(name="list_products",method="get",action="/")
			select(name="category") &nbsp &nbsp;
					option(value="all_categories") All Categories 
					option(value="Tools") Tools
					option(value="Grocery") Grocery
			input(type="text", name="keyword") 
			button#btnSubmit(type="submit") Search
	div
		br
		dl
			each product in product_list
				dt
					a(href= '/product:' + product.product_name) #{product.product_name}