extends layout

block content
    h2 New Product
    br
    span
        form#new_prod(name="new_prod",method="post",action="/createproduct")
            b Product Name: 
            input(type="text", name="productname")
            br
            b Price: 
            input(type="text", name="price") 
            br
            b Stock Count: 
            input(type="text", name="stock")
            br
            b Manufacturer: 
            input(type="text", name="manufacturer") 
            br
            b Supplier: 
            input(type="text", name="supplier")
            br
            b Category: 
            input(type="text", name="category") 
            br
            button#btnSubmit(type="submit") Create Product

    h2 Delete Product
    br
    span
        form#delete_prod(name="delete_prod", method="post", action="/deleteproduct")
            b Product Name: 
            input(type="text", name="productname")
            br
            b Manufacturer: 
            input(type="text", name="manufacturer")
            br
            b Quantity:
            input(type="text", name="quantity")
            br
            button#btnSubmit(type="submit") Delete Product

    h2 Delete Category
    br
    span
        form#delete_prod(name="delete_prod", method="post", action="/deleteproduct")
            b Category:
            input(type="text", name="category")
            br
            button#btnSubmit(type="submit") Delete Category